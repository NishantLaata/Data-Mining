#                         print(Q1.iloc[i][0])
#                         print("listening Comprehension")
                            writer.writerow([str(os.path.basename(f)),x,'Learning Comprehension'])
    
                    
                        else :
#                         print(Q1.iloc[i][0])
#                         print("reading comprehension")
                            x = Q1.iloc[i][0];
                            y = str(i);                    
                            writer.writerow([str(os.path.basename(f)),x,'Reading Comprehension'])

